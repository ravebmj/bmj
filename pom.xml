  <build>
    <finalName>bmj</finalName>
    
		<resources>
			<resource>
			  <directory>src/main/resources</directory>
			</resource>
			<resource>
			  <directory>src/main/java</directory>
			  <excludes>
				 <exclude>**/*.java</exclude>
			  </excludes>
			</resource>
		  </resources>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
